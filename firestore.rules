rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own doc
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only admin SDK writes
    }
    
    // Pages: admin can write, anyone can read
    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Blog metadata: admin write, read based on tier
    match /blog/{postId} {
      allow read: if true; // Tier gating done in app
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Waitlist: anyone can create
    match /waitlist/{docId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.token.role == 'admin';
    }
  }
}